{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "*", "close": "*", "notIn": ["string", "comment"] },
    { "open": "_", "close": "_", "notIn": ["string", "comment"] },
    { "open": "~", "close": "~", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["`", "`"],
    ["\"", "\""],
    ["'", "'"],
    ["*", "*"],
    ["_", "_"],
    ["~", "~"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#?region\\b.*-->",
      "end": "^\\s*<!--\\s*#?endregion\\b.*-->"
    }
  },
  "wordPattern": "([\\p{Alphabetic}\\p{Number}\\p{Nonspacing_Mark}]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*([-*+]|\\d+\\.)\\s+",
    "decreaseIndentPattern": "^\\s*([-*+]|\\d+\\.)\\s+"
  }
}
